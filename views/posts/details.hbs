{{!-- posts/details.hbs --}}

<h2>User's posts</h2>
<div>
  {{content}}
  <br>
  - by {{explorers.username}} ♥️
</div>
{{#unless comments}}
  <p>No comments yet!</p>
{{/unless}}
 
{{#each comments}}
  <p><b>{{this.explorer.username}}:</b> {{this.content}}</p>
{{/each}}
 
<hr>
 
<h3>Add comment</h3>
 
<form action="/posts/{{_id}}/comment" method="post">
  <label> Your username:
    <input type="text" name="explorer" />
  </label>
  <input type="text" name="postSafari" value="{{explorer.username}}" hidden />
  <textarea name="content" cols="30" rows="2"></textarea>
 
  <button type="submit">Comment</button>
</form>
 
<br>

<a href="/users/{{explorers._id}}/posts">See all {{explorers.username}}'s posts </a>
